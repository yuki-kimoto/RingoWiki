% layout 'common', title => '一覧';

<h1 class="header">
  ページ一覧
</h1>

<table class="table table-striped">
% for my $page (@$pages) {
  <tr>
    <td>
      <a href="<%= url_for('page', wiki_id => $page->{wiki_id}, page_name => $page->{name}) %>">
      <%= $page->{name} %>
      </a>
    </td>
  </tr>
% }
</tbody>
</table>